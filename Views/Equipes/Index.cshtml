@model IEnumerable<GestaoTorneiosEsports.Models.Equipe>

@{
    ViewData["Title"] = "Equipes Cadastradas";
}

<h1>Equipes Cadastradas</h1>

<p>
    <a asp-action="Create">Criar Nova Equipe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroJogadores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontuacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Torneio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroJogadores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pontuacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Torneio.Jogo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EquipeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EquipeId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EquipeId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
